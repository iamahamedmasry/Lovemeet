# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# TypeScript/TSX files
[*.{ts,tsx}]
indent_style = space
indent_size = 2
charset = utf-8

# JSON files
[*.json]
indent_style = space
indent_size = 2
charset = utf-8

# HTML files
[*.html]
indent_style = space
indent_size = 2
charset = utf-8

# CSS files
[*.{css,scss}]
indent_style = space
indent_size = 2
charset = utf-8
